// prisma/schema.prisma
datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Chat {
  id       Int    @id @default(autoincrement())
  chatId   String @unique
  type     String // "private" или "group"
  createdAt DateTime @default(now())
}